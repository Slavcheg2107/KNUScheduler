<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
  <item>
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
      android:shape="rectangle"
      android:innerRadius="30dp">
      <corners android:radius="10dp" />

      <stroke
        android:width="2dp"
        android:color="@color/colorPrimaryDark" />
      <size
        android:width="80dp"
        android:height="50dp" />
      <padding
        android:bottom="30dp"
        android:right="10dp"
        android:left="10dp"
        android:top="10dp" />
    </shape>


  </item>
  <item>
    <shape android:shape="rectangle">
      <corners android:radius="10dp" />
      <solid android:color="@color/day_selector" />
      <size
        android:width="80dp"
        android:height="30dp" />
      <padding
        android:bottom="20dp"
        android:right="20dp"
        android:left="20dp"
        android:top="5dp" />
    </shape>
  </item>
</layer-list>


