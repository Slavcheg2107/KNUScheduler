<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav"
    app:startDestination="@id/facultyFragment">

    <fragment
        android:id="@+id/facultyFragment"
        android:name="com.owl.krasn.KNUSchedule.View.Fragment.FacultyFragment"
        android:label="FacultyFragment">
        <action
            android:id="@+id/action_facultyFragment_to_groupFragment"
            app:destination="@+id/groupFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/groupFragment"
        android:name="com.owl.krasn.KNUSchedule.View.Fragment.GroupFragment"
        android:label="GroupFragment">

        <argument
            android:name="faculty_id"
            android:defaultValue="0"
            app:argType="long" />
        <action
            android:id="@+id/action_groupFragment_to_weekFragment"
            app:destination="@id/weekFragment" />
    </fragment>
    <fragment
        android:id="@+id/weekFragment"
        android:name="com.owl.krasn.KNUSchedule.View.Fragment.WeekFragment"
        android:label="WeekFragment" >
        <argument
            android:name="group_name"
            app:argType="string" />
    </fragment>
</navigation>