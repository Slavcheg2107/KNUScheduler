<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    <!-- Customize your theme here. -->
    <item name="android:colorControlActivated">@color/colorPrimaryDark</item>
    <item name="colorPrimary">@color/colorPrimaryDark</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorPrimaryDark</item>
    <item name="android:textColorSecondary">@color/colorWhite</item>
    <item name="android:text">@color/colorSecondaryDark</item>
  </style>



  <style name="SwitchTheme">
    <item name="android:colorAccent">@color/colorPrimaryDark</item>
    <item name="thumbTint">@color/switch_thumb_color_selector</item>
    <item name="trackTint">@color/switch_track_color_selector</item>
  </style>


  <style name="SplashTheme" parent="AppTheme">
    <item name="android:windowBackground">@drawable/splash</item>

  </style>

  <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
    <item name="searchIcon">@drawable/ic_search_black_24dp</item>
    <item name="closeIcon">@drawable/ic_close_black_24dp</item>
    <item name="android:textColorHint">@color/colorPrimaryDark</item>
    <item name="android:background">@drawable/search_background</item>
    <item name="queryHint">@string/search_group_hint</item>
  </style>

  <string name="search_group_hint">Пошук групи</string>
</resources>
